{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,

    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "react": ["./node_modules/react"],
      "antd": ["./node_modules/antd"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
